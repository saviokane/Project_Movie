<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/container_components</item>
        <item name="android:layout_margin">20dp</item>
        
    </style>
    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:width">220dp</item>
        <item name="android:height">58dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/background</item>
    </style>
    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textColor">#764D01</item>
        <item name="android:itemBackground">#061031</item>
        <item name="android:radius">50dp</item>
        <!-- Define a cor do texto para laranja (#FFA500) -->
    </style>

    <style name="Estilo_Texto_Lista">
        <item name="android:textColor">#FFDB59</item>
        <!-- Outros atributos de estilo, se necessÃ¡rio -->
    </style>

</resources>