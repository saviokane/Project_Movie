<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/search"
        tools:context="com.maxpayneman.project_movie.View.FilmesSearchMainActivity">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start">
    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Buscar Filmes"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#FF9800"
            android:background="@drawable/background"
            android:layout_marginTop="0dp"
    >

    </TextView>

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back"
            style="@style/Button_back"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
    ></androidx.appcompat.widget.AppCompatButton>


    <EditText
            android:id="@+id/edit_filme_name"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:textColor="#D38000"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_height="wrap_content"/>

    <Button

            android:id="@+id/buscar_filme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Buscar"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:backgroundTint="#926205"
            />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imgview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                   ></ImageView>

        <ListView
                android:id="@+id/list_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/blue"
                android:foregroundTint="@color/blue"
                android:backgroundTintMode="multiply"
                android:outlineSpotShadowColor="@color/blue"
        >

        </ListView>


        <ImageView
                android:id="@+id/imagem_filme"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"

        />

    </LinearLayout>



</LinearLayout>